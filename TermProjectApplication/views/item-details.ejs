<%- include('./partials/head') %>
<div class="product-detail-container" id="prod-details-container-main">
    <div class="product-image-container" id="product-image-container-main">
        <img src="<%= imageURL %>">
    </div>

    <div class="product-details" id="product-details-container-text">
        <h1><%= item.name %></h1><br>
        <h2><%= item.price %></h2><br><br>
        <p><%= item.description %></p>
        <form action="/user/addToCart" method="POST">
            <input type="hidden" name="productID" value="<%= item.productID %>">
            <button type="submit">Add to Cart</button>
        </form>
    </div>
</div>

