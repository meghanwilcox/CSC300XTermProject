<%- include('./partials/admin-head') %>
    <main>

        <body>
            <div id="p-container">


                <div id="form-cont">
                    <form id="form2" action="/admin/new" method="POST">
                        <h3>List a New Product For Sale</h3>
                        <br>
                        <div>
                            <label for="name">Name</label>
                            <input id="name" type="text" placeholder="Name" name="name">
                        </div>
                        <br>
                        <div>
                            <label for="category">Category:</label>
                            <select id="category" name="category">
                                <option value="Coffee">Coffee</option>
                                <option value="Tea">Tea</option>
                                <option value="Accessories">Accessories</option>
                            </select>
                        </div>
                        <br>
                        <div>
                            <label for="price">Price</label>
                            <input id="price" type="number" min="0" step="0.01" placeholder="Price" name="price">
                        </div>
                        <div>
                            <label for="description">Description</label>
                            <input id="description" type="text" placeholder="Description" name="description">

                        </div>
                        <br>

                        <button id="save-product" type="submit" class="nav-button">Submit</button>
                    </form>
                </div>

                <form action="/admin/filter" method="POST">
                    <label for="category">Filter by Category:</label>
                    <select name="category" id="category">
                        <option value="">All</option>
                        <option value="Coffee">Coffee</option>
                        <option value="Tea">Tea</option>
                        <option value="Accessories">Accessories</option>
                    </select>
                    <button type="submit">Apply Filter</button>
                </form>

                <div id="item-list">
                    <% for (const product of products) { %>
                        <div class="product-item">
                            <!-- Product Image -->
                            <img class="product-image" src="/images/<%= product.imageURL %>" alt="<%= product.name %>">

                            <!-- Product Details -->
                            <h3>
                                <%= product.name %>
                            </h3>
                            <p><strong>Price:</strong>
                                <%= product.price %>
                            </p>
                            <p><strong>Description:</strong>
                                <%= product.description %>
                            </p>

                            <!-- Edit Button -->
                            <button class="edit-btn" onclick="window.location.href='/admin/edit/<%= product.id %>'">Edit</button>

                        </div>
                        <% } %>
                </div>




            </div>

        </body>

    </main>

    </html>